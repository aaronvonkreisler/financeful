{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es6", // or newer if your node.js version supports this
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "declaration": false,
    "noFallthroughCasesInSwitch": true,
    "composite": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "lib": ["dom", "es2016", "esnext.asynciterable"],
    "sourceMap": true,
    "strict": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "*": ["node_modules/*"],
      "@Lib/*": ["./src/lib/*"],
      "@Modules/*": ["./src/modules/*"],
      "@Shared/*": ["./src/shared/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
